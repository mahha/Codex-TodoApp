{
	"name": "my-react-router-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "npm run build && wrangler deploy",
		"dev": "react-router dev --host",
		"dev:wrangler": "wrangler dev --local --persist-to .wrangler/state --port 5173",
		"dev:local": "DEV_HOST=localhost wrangler dev --local --persist-to .wrangler/state --port 5173",
		"db:create": "wrangler d1 execute codex-todo-db --local --command \"SELECT 1\"",
		"db:create-remote": "wrangler d1 create codex-todo-db",
		"db:migrate": "wrangler d1 migrations apply codex-todo-db --local",
		"db:migrate-remote": "wrangler d1 migrations apply codex-todo-db --remote",
		"db:seed": "tsx db/seed.ts --print-sql > /tmp/todo-seed.sql && wrangler d1 execute codex-todo-db --local --file /tmp/todo-seed.sql",
		"db:seed-remote": "tsx db/seed.ts --print-sql > /tmp/todo-seed.sql && wrangler d1 execute codex-todo-db --remote --file /tmp/todo-seed.sql",
		"db:reset": "wrangler d1 execute codex-todo-db --local --command \"DROP TABLE IF EXISTS todos; DROP TABLE IF EXISTS d1_migrations;\" && npm run db:migrate && npm run db:seed",
		"db:reset-remote": "wrangler d1 execute codex-todo-db --remote --command \"DROP TABLE IF EXISTS todos; DROP TABLE IF EXISTS d1_migrations;\" && npm run db:migrate-remote && npm run db:seed-remote",
		"postinstall": "npm run cf-typegen",
		"preview": "npm run build && vite preview",
		"lint": "eslint .",
		"test": "vitest",
		"test:e2e": "playwright test",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b"
	},
	"dependencies": {
		"isbot": "^5.1.31",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.10.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.5",
		"@eslint/js": "^9.36.0",
		"@playwright/test": "^1.58.0",
		"@react-router/dev": "^7.10.0",
		"@tailwindcss/vite": "^4.1.13",
		"@testing-library/react": "^16.3.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"better-sqlite3": "^11.10.0",
		"eslint": "^9.36.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^16.4.0",
		"jsdom": "^26.0.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.21.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.59.2"
	}
}
